<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder
            by default -->
        <encoder>
            <pattern>[%level] [%d{dd/MM/yyyy HH:mm:ss.SSS}] [%thread] [%logger{5}] -%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/data-pipeline-server-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] [%d{dd/MM/yyyy HH:mm:ss.SSS}] [%thread] [%logger{5}] -%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE-ERROR"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/data-pipeline-server-%d{yyyy-MM-dd}-ERROR.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%level] [%d{dd/MM/yyyy HH:mm:ss.SSS}] [%thread] [%logger{5}] -%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="au.com.nicta.data.pipeline.core" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>


    <!-- Strictly speaking, the level attribute is not necessary since -->
    <!-- the level of the root level is set to DEBUG by default. -->
    <root level="TRACE">
        <appender-ref ref="STDOUT" />
    </root>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>